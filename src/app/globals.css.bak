@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800&family=Inter:wght@300;400;500;600;700;800&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

/* Theme CSS Variables (Light / Dark) - Modern Gradient Theme (Purple-Cyan-Pink) */
:root {
  /* Fonts */
  --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
  --font-display: 'Playfair Display', serif;

  /* Light Theme */
  --bg: #f8f6ff;               /* ultra light lavender */
  --card: #ffffff;             /* clean white */
  --primary: #6d28d9;          /* rich purple */
  --primary-strong: #5b21b6;   /* darker purple */
  --primary-light: #ede9fe;    /* pale purple */
  --secondary: #0891b2;        /* cyan */
  --secondary-light: #cffafe;  /* pale cyan */
  --accent: #db2777;           /* hot pink */
  --accent-light: #fbcfe8;     /* pale pink */
  --highlight: #ec4899;        /* vibrant pink */
  --text: #1e1b4b;             /* deep slate */
  --text-secondary: #3f3460;   /* muted slate */
  --muted: #64748b;            /* slate gray */
  --button-text: #ffffff;
  --border: #e9d5ff;           /* lavender border */
  --success: #22c55e;
  --warning: #f59e0b;
  --error: #ef4444;
  --info: #0ea5e9;
  --glow: 0 16px 60px rgba(109, 40, 217, 0.35);
  --glow-lg: 0 25px 80px rgba(109, 40, 217, 0.4);
  --shadow-sm: 0 2px 8px rgba(109, 40, 217, 0.08);
  --shadow-md: 0 8px 24px rgba(109, 40, 217, 0.14);
  --shadow-lg: 0 16px 40px rgba(109, 40, 217, 0.2);
}

:root.dark,
html.dark {
  --bg: #0f0a1a;               /* deep purple-black */
  --card: #1a1530;             /* dark purple panel */
  --primary: #a78bfa;          /* light purple */
  --primary-strong: #c4b5fd;   /* lighter purple */
  --primary-light: #312e81;    /* darker purple fill */
  --secondary: #06b6d4;        /* bright cyan */
  --secondary-light: #0f2d3d;  /* dark cyan fill */
  --accent: #ff1493;           /* deep pink */
  --accent-light: #4a1d3d;     /* dark pink fill */
  --highlight: #f472b6;        /* light pink accent */
  --text: #f5f3ff;             /* light lavender */
  --text-secondary: #d8c9ff;   /* pale purple text */
  --muted: #a8a4c7;            /* muted lavender */
  --button-text: #0f0a1a;
  --border: #3d2e5f;           /* purple border */
  --success: #34d399;
  --warning: #fbbf24;
  --error: #f87171;
  --info: #22d3ee;
  --glow: 0 16px 60px rgba(168, 139, 250, 0.4);
  --glow-lg: 0 25px 80px rgba(168, 139, 250, 0.5);
  --shadow-sm: 0 2px 8px rgba(168, 139, 250, 0.15);
  --shadow-md: 0 8px 24px rgba(168, 139, 250, 0.22);
  --shadow-lg: 0 16px 40px rgba(168, 139, 250, 0.3);
}

@layer base {
  body {
    background-color: var(--bg);
    color: var(--text);
    @apply antialiased transition-colors duration-300 ease-in-out;
  }

  h1 {
    @apply font-display text-4xl font-bold;
  }

  h2 {
    @apply font-display text-3xl font-bold;
  }

  h3 {
    @apply font-display text-2xl font-semibold;
  }

  h4 {
    @apply font-display text-xl font-semibold;
  }

  a {
    @apply transition-colors;
  }

  button {
    @apply transition-all duration-200;
  }
}

@layer components {
  .btn-primary {
    background-color: var(--primary);
    color: var(--button-text);
    @apply px-5 py-2.5 rounded-lg font-semibold transition-all hover:shadow-lg;
    box-shadow: var(--glow);
  }

  .btn-primary:hover {
    background-color: var(--primary-strong);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background-color: var(--secondary);
    color: #ffffff;
    @apply px-5 py-2.5 rounded-lg font-semibold transition-all hover:shadow-lg;
  }

  .btn-secondary:hover {
    filter: brightness(0.9);
    transform: translateY(-2px);
  }

  .btn-ghost {
    color: var(--primary);
    @apply px-4 py-2 rounded-lg transition-all;
    background-color: color-mix(in srgb, var(--highlight) 10%, transparent);
  }

  .btn-ghost:hover {
    background-color: color-mix(in srgb, var(--highlight) 18%, transparent);
  }

  .card {
    background-color: var(--card);
    color: var(--text);
    @apply rounded-xl shadow-soft border p-6 transition-all hover:shadow-soft-lg;
    border-color: var(--border);
  }

  .card-interactive {
    @apply card hover:scale-105 hover:shadow-lg cursor-pointer;
  }

  .input-base {
    background-color: var(--card);
    color: var(--text);
    border-color: var(--border);
    @apply w-full px-4 py-2 border rounded-lg placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary transition-all;
  }

  .input-base::placeholder {
    color: var(--muted);
  }

  .badge {
    @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium;
  }

  .badge-primary {
    @apply badge bg-blue-100 text-blue-800;
  }

  .badge-success {
    @apply badge bg-green-100 text-green-800;
  }

  .badge-warning {
    @apply badge bg-yellow-100 text-yellow-800;
  }

  .badge-error {
    @apply badge bg-red-100 text-red-800;
  }

  .section-title {
    color: var(--text);
    @apply text-3xl font-bold font-display;
  }

  .section-subtitle {
    color: var(--muted);
    @apply text-lg;
  }

  .container-bounded {
    @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }

  .gradient-primary {
    background: linear-gradient(120deg, var(--primary), var(--secondary), var(--accent));
  }

  .glass {
    background: color-mix(in srgb, var(--card) 88%, transparent);
    @apply backdrop-blur-md border;
    border-color: var(--border);
  }

  .smooth-transition {
    @apply transition-all duration-300 ease-in-out;
  }

  .focus-ring {
    @apply focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2;
  }

  /* Flip Card Animation */
  @keyframes flip-in {
    0% {
      transform: rotateY(90deg);
      opacity: 0;
    }
    100% {
      transform: rotateY(0deg);
      opacity: 1;
    }
  }

  @keyframes flip-out {
    0% {
      transform: rotateY(0deg);
      opacity: 1;
    }
    100% {
      transform: rotateY(-90deg);
      opacity: 0;
    }
  }

  .flip-in {
    animation: flip-in 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    perspective: 1000px;
  }

  .flip-out {
    animation: flip-out 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    perspective: 1000px;
  }

  /* Glow Animation */
  @keyframes glow-pulse {
    0%, 100% {
      box-shadow: var(--glow);
    }
    50% {
      box-shadow: 0 15px 60px color-mix(in srgb, var(--secondary) 80%, transparent);
    }
  }

  .glow-pulse {
    animation: glow-pulse 3s ease-in-out infinite;
  }

  /* Slide In Animation */
  @keyframes slide-in-up {
    0% {
      transform: translateY(30px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .slide-in-up {
    animation: slide-in-up 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
}

/* Theme overrides for common Tailwind utility combos */
/* Light and Dark - Use CSS Variables */
.bg-white {
  background-color: var(--card) !important;
}

.text-gray-700,
.text-gray-800,
.text-gray-900 {
  color: var(--text) !important;
}

.text-gray-500,
.text-gray-600 {
  color: var(--muted) !important;
}

.border-gray-100,
.border-gray-200,
.border-gray-300 {
  border-color: var(--border) !important;
}

.shadow-soft,
.shadow-soft-lg,
.shadow-lg {
  box-shadow: var(--glow) !important;
}

.bg-gray-50,
.bg-gray-100,
.bg-gray-200 {
  background-color: var(--card) !important;
  color: var(--text) !important;
}

/* Dark theme specific shadows */
.dark .shadow-soft,
.dark .shadow-soft-lg,
.dark .shadow-lg {
  box-shadow: var(--glow) !important;
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: #e8ebf3;
  background-color: var(--bg);
}

html.dark ::-webkit-scrollbar-track {
  background: #0f1d32;
}

::-webkit-scrollbar-thumb {
  background: var(--secondary);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--primary);
}

/* Calendar Picker Styling */
input[type='datetime-local']::-webkit-calendar-picker-indicator {
  cursor: pointer;
  filter: invert(0.5) brightness(1.2);
}

/* Calendar popup background and borders */
input[type='datetime-local'] {
  accent-color: var(--primary);
}

/* Chrome/Edge calendar picker styling */
@supports (-webkit-appearance: none) {
  input[type='datetime-local'] {
    -webkit-appearance: none;
    appearance: none;
  }
}

/* Firefox calendar picker */
input[type='datetime-local']::picker-icon {
  filter: brightness(0) sepia(1) hue-rotate(187deg) saturate(1.5);
}

/* Custom datetime input wrapper styles */
.datetime-wrapper {
  position: relative;
}

.datetime-wrapper input::-webkit-calendar-picker-indicator {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  cursor: pointer;
  color: var(--primary);
}

/* Selected date background (current date highlight) */
input[type='datetime-local']::selection {
  background-color: var(--primary) !important;
  color: white !important;
}

/* Custom React DatePicker Styling */
.date-picker-wrapper .react-datepicker-wrapper {
  width: 100%;
}

.react-datepicker__header {
  background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
  border-color: var(--primary);
  padding: 16px;
}

.react-datepicker__header__dropdown {
  color: white;
}

.react-datepicker__current-month--hasYearDropdown,
.react-datepicker__current-month--hasMonthDropdown {
  color: white;
  font-weight: bold;
  font-size: 16px;
}

.react-datepicker__day-names,
.react-datepicker__week {
  border: none;
}

.react-datepicker__day-name {
  color: var(--primary);
  font-weight: 600;
  width: 2.3rem;
  line-height: 1.6rem;
}

.react-datepicker__day {
  width: 2.3rem;
  line-height: 1.6rem;
  border-radius: 6px;
  color: var(--text);
  transition: all 0.2s ease;
}

.react-datepicker__day:hover:not(.react-datepicker__day--disabled) {
  background-color: var(--secondary);
  color: white;
  transform: scale(1.05);
}

.react-datepicker__day--selected {
  background-color: var(--primary) !important;
  color: white !important;
  font-weight: bold;
  border: 2px solid var(--primary-strong);
}

.react-datepicker__day--today {
  background-color: var(--accent) !important;
  color: white !important;
  font-weight: bold;
  border: 2px solid color-mix(in srgb, var(--accent) 80%, #000 20%);
}

.react-datepicker__day--outside-month {
  color: #BDBDBD;
}

.react-datepicker__day--keyboard-selected {
  background-color: #1E93AB;
  color: white;
}

.react-datepicker__month {
  margin: 0.4rem;
  text-align: center;
}

.react-datepicker__time-container {
  border-left: 2px solid var(--border);
}

.react-datepicker__time-list-item {
  color: var(--text);
}

.react-datepicker__time-list-item--selected {
  background-color: var(--primary) !important;
  color: white !important;
  font-weight: bold;
}

.react-datepicker__time-list-item:hover {
  background-color: color-mix(in srgb, var(--bg) 90%, #fff 10%);
}

.react-datepicker {
  border: 3px solid var(--primary);
  border-radius: 12px;
  box-shadow: 0 10px 40px rgba(28, 63, 95, 0.2);
  font-family: inherit;
  background: var(--card);
  z-index: 1000;
}

.react-datepicker__triangle {
  display: none;
}

/* End date calendar - Accent theme */
.custom-calendar-end .react-datepicker__header {
  background: linear-gradient(135deg, var(--accent) 0%, color-mix(in srgb, var(--accent) 70%, #000 30%) 100%);
  border-color: var(--accent);
}

.custom-calendar-end .react-datepicker__day-name {
  color: var(--accent);
}

.custom-calendar-end .react-datepicker__day:hover:not(.react-datepicker__day--disabled) {
  background-color: var(--accent);
  color: white;
}

.custom-calendar-end .react-datepicker__day--selected {
  background-color: var(--accent) !important;
  color: white !important;
  border: 2px solid color-mix(in srgb, var(--accent) 80%, #000 20%);
}

.custom-calendar-end .react-datepicker {
  border-color: var(--accent);
  box-shadow: 0 10px 40px color-mix(in srgb, var(--accent) 30%, #000 70%);
}

/* Smooth transitions */
* {
  transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: 150ms;
}
